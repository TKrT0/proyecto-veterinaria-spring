<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.veterinaria.ui.historial.HistorialCitasControlador">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label text="Historial General de Citas">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="tablaHistorial">
            <columns>
                <TableColumn fx:id="colIdCita" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colDueno" prefWidth="120.0" text="DueÃ±o" />
                <TableColumn fx:id="colMascota" prefWidth="120.0" text="Mascota" />
                <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha/Hora" />
                <TableColumn fx:id="colMotivo" prefWidth="200.0" text="Motivo" />
                <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="marcarPendienteButton" onAction="#actualizarEstadoPendiente" text="Marcar como Pendiente" />
                <Button fx:id="marcarCompletadaButton" onAction="#actualizarEstadoCompletada" text="Marcar como Completada" />
                <Button fx:id="refrescarButton" onAction="#cargarDatos" text="Refrescar" />
            </children>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>