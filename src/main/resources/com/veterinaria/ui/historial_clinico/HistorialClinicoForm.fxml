<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ScrollPane?>
<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.veterinaria.ui.historial_clinico.HistorialClinicoControlador">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Historial Clínico de la Mascota">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <TableView fx:id="tablaHistorial" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha Visita" />
                        <TableColumn fx:id="colDiagnostico" prefWidth="180.0" text="Diagnóstico" />
                        <TableColumn fx:id="colTratamiento" prefWidth="180.0" text="Tratamiento" />
                        <TableColumn fx:id="colNotas" prefWidth="180.0" text="Notas" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </top>
    <bottom>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="350.0">
            <content>
                <VBox spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Agregar Nueva Entrada">...</Label>
                        <Label text="Diagnóstico:" />
                        <TextArea fx:id="diagnosticoTexto" prefHeight="50"/>
                        <Label text="Tratamiento:" />
                        <TextArea fx:id="tratamientoTexto" prefHeight="50"/>
                        <Label text="Notas:" />
                        <TextArea fx:id="notasTexto" prefHeight="50"/>
                        <Button fx:id="guardarEntradaButton" text="Guardar Entrada" onAction="#registrarNuevaEntrada" />
                    </children>
                </VBox>
            </content>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </ScrollPane>
    </bottom>
</BorderPane>